<Window x:Class="Lesson7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="930" Loaded="Window_Loaded">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="allEmployeeDataGrid" HorizontalAlignment="Left" Height="263" Margin="59,10,0,0" VerticalAlignment="Top" Width="437" ItemsSource="{Binding}" IsReadOnly="True">
        </DataGrid>
        <ComboBox x:Name="allDepComboBox" HorizontalAlignment="Left" Margin="545,10,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Департамент}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Window>
