<Window x:Class="Lesson7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
    </Window.Resources>
    <ListView x:Name="depList" HorizontalAlignment="Left" Height="179" Margin="61,80,0,0" VerticalAlignment="Top" Width="476" >
        <ListView.View>
            <GridView>
                <GridViewColumn Width="150" Header="ID" DisplayMemberBinding="{Binding ID}"/>
                <GridViewColumn Width="100" Header="название департамента" DisplayMemberBinding="{Binding NameDep}"/>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
